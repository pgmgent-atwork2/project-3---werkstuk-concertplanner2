      </div>
    </form>
  </div>
</div>

<script>
  function toggleForm() {
    document.getElementById('toggleView').classList.toggle('activateForm');

  };

  function closeForm() {
    document.getElementById('toggleView').classList.remove('activateForm');
  }

    function toggleFormEvent() {
    document.getElementById('toggleEvent').classList.toggle('activateForm');

  };

  function closeFormEvent() {
    document.getElementById('toggleEvent').classList.remove('activateForm');
  }
</script>

