<div class=" {{ activateForm }}" id="toggleView">
  <div class="overlay-form">
    <div class="close-btn" onclick="closeForm()">&times;</div>
    <h1>Registreer een nieuw orkest</h1>
    <form method="post" action="/addOrkestUser">
      {{#each inputs}}
        {{>form-input this}}
      {{/each}}
      <div class="register__buttons">
        <input type="submit" class="btn btn--register" value="Register">
        <input type="reset" class="btn btn--clear" value="Clear">
      </div>
    </form>
  </div>
</div>

<div class=" {{ activateForm }}" id="toggleEvent">
  <div class="overlay-form">
    <div class="close-btn" onclick="closeFormEvent()">&times;</div>
    <h1>Registreer een nieuw event</h1>
    <form method="post" action="/addEvent">
  <p>hello</p>
      <div class="register__buttons">
        <input type="submit" class="btn btn--register" value="Register">
